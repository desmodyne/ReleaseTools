#!/usr/bin/env bash

# test
#
# test artifacts of this project
#
# author  : stefan schablowski
# contact : stefan.schablowski@desmodyne.com
# created : 2016-06-16


# -----------------------------------------------------------------------------
# configure script parameters

# absolute path to this script: http://stackoverflow.com/a/9107028
path_to_this_script="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# path from this script to project root
rel_path_to_project_root='../..'

# absolute path to project root
path_to_project_root="$(realpath \
                        "${path_to_this_script}/${rel_path_to_project_root}")"


# -----------------------------------------------------------------------------
# test this project

# TODO: verify required executables are available before using them

dd-shellcheck "${path_to_project_root}"
res="$?"; if [ "${res}" -ne 0 ]; then exit "${res}"; fi

# TODO: review this
case "${OSTYPE}" in
    linux*)
        dd-lint-debian-package "${path_to_project_root}"
        res="$?"; if [ "${res}" -ne 0 ]; then exit "${res}"; fi
        ;;
esac
